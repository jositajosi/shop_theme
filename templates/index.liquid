{% paginate collections.frontpage.products by 5 %}   

<div class="main2cols clearfix">
  <div class="maincol">
    {% for product in collections.frontpage.products  %}
      {% if forloop.first %}
        <div id="producthome">
          <div class="h2 small">Let us show you something...</div>
        
          <div class="product-title-container">
            <h2 class="product-title"><a href="{{product.url}}">{{product.title}}</a></h2>
            <div class="product-design">- designed by <strong>Jositajosi</strong></div>
          </div>
          
          <div class="product-info">
            <div class="product-main-info">
              <div class="product-category">
                <div class="item-category">{{product.type}}</div>
                <div class="product-category-corner"></div>
              </div>
              <div class="product-image">
                <img src="{{ product.featured_image | product_img_url: 'large'}}" alt="{{product.title | escape }}" />
              </div>
              <div class="product-price">
                PRICE: 
                {% if product.compare_at_price %}         
                  {% if product.price_min != product.compare_at_price %}          
                    {{product.compare_at_price | money}} -
                  {% endif %}
                {% endif %}
                <strong>
                  {{product.price_min | money}}
                </strong>
              </div>
            </div>
            <div class="product-description">{{product.description}}</div>
          </div> 
          <div class="product-bottom-info clearfix">
            <div class="product-brief brief-computer-13">Specially made for Macbook 13&quot;</div>
            <a href="{{product.url}}" class="button">VIEW DETAILS</a>
          </div>
        </div>  
      {% else %}
      {% endif %}
    {% endfor %}
  </div>     
  <div class="sidecol">
    <div class="product-related">
      <div class="h2 x-small">and what about this?</div>
      <ul>
        {% for product in collections.frontpage.products  %}
          {% if forloop.first %}
          {% else %}
            <li class="clearfix">
              <h4><a href="{{product.url}}">{{product.title}}</a></h4>
              <a href="{{collections[product.type | handleize].url}}" class="category-thumb computer">{{product.type}}</a>
              <div class="thumb-medium">
                <a href="#">
                  <img src="{{ product.featured_image | product_img_url: 'small' }}" alt="{{ product.title | escape }}"/>
                </a>
              </div>
              <div class="price">
                PRICE:
                {% if product.compare_at_price %}         
                   {% if product.price_min != product.compare_at_price %}          
                     {{product.compare_at_price | money}} -
                   {% endif %}
                 {% endif %}
                 <strong>
                   {{product.price_min | money}}
                 </strong>
                <div class="add-cart"><a href="#" class="button">ADD TO CART</a></div>
              </div>
            </li>
          
          
          {% endif %}
        {% endfor %}           
      </ul>
    </div>
  </div> <!-- /.sidecol -->
  
</div> <!-- /.main2cols -->

{% endpaginate %}

<br />

<div id="home-3-blocks" class="clearfix">
  <ul>
    <li id="block-eco">
      <div class="box-30">
        <div class="h2 x-small">We love our planet</div>
        <p>...and we are eco-friendly. Our labels and dyes don't use pentaclorophenol.</p>
      </div>
      <div class="box-30-bottom"></div>
    </li>
    <li id="block-shipping">
      <div class="box-30">
        <div class="h2 x-small">Safe &amp; Warm</div>
        <p>We ship to almost to every country in the world. From Iceland to Tuvalu.</p>
        <p>You can safely pay with <strong>Paypal</strong> or <strong>credit card</strong>.</p>
        <img src="{{ 'logo-paypal.gif' | asset_url }}" alt="PayPal" />
        <img src="{{ 'logo-mastercard.gif' | asset_url }}" alt="Mastercard" />
        <img src="{{ 'logo-visa.gif' | asset_url }}" alt="Visa" />
        <img src="{{ 'logo-amex.gif' | asset_url }}" alt="American Express" />

      </div>
      <div class="box-30-bottom"></div>
    </li>
    <li id="block-bulletin">
      <div class="box-30">
        <div class="h2 x-small">Be the first to know</div>
        <form name="f_bulletin" id="f_bulletin" action="f_bulletin" method="post">
          <p><label for="email">We have new fabrics and crafting ideas every month. Stay up-to-date joining our newsletter:</label></p>
          <input type="text" name="email" id="email" class="fieldbox" size="20" value="Enter your email address..." />
          <div class="form_actions">
            <input type="submit" name="submit" value="JOIN US" class="button" />
          </div>
        </form>
      </div>
      <div class="box-30-bottom"></div>
    </li>
  </ul>
</div>